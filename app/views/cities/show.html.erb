<br>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12 lead">Welcome to <%= @city.name.capitalize %><hr></div>
          </div>
          <div class="row">
      <div class="col-md-4 text-center">
              <img class="img-circle avatar avatar-original" style="-webkit-user-select:none; 
              display:block; margin:auto;" src="<%= @randomizer[rand(4)] %>">
            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-12">
                  <h1 class="only-bottom-margin"><%= @city.name %></h1>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <span class="text-muted"><%= @city.name.capitalize %>'s users number:</span> <%= @city.users.count %><br>
                  <span class="text-muted">Zip:</span> <%= @city.zip_code %><br>
                </div>
                <div class="col-md-6">
                  <div class="activity-mini">
                    <i class="glyphicon glyphicon-comment text-muted"></i>
                  </div>
                  <div class="activity-mini">
                    <i class="glyphicon glyphicon-thumbs-up text-muted"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <hr>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
          <div class="col-1">
          </div>

          <div class="col-10">
<ul class="list-group">
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong> La liste des potins d'ici</strong>
                <span class="badge badge-primary badge-pill"> <%= @city.gossips.length %></span>
              </li>

              <% @city.gossips.each_with_index do |gossip| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= link_to gossip.title, gossip_path(gossip.id.to_s) %>

                <span class="badge badge-primary badge-pill"> <%= link_to "lien", "/gossips/#{gossip.id.to_s}", {:style=>'color:#FFFFFF'} %></span>
              </li>
              <% end %>
            </ul>

          </div>

          <div class="col-1">
          </div>
        </div>



</div>
